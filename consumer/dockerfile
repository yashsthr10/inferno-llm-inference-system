FROM python:3.12-slim

# install system packages needed for psycopg2, protobuf, etc.
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
      build-essential \
      libpq-dev \
      python3-dev \
      protobuf-compiler \
      libprotobuf-dev && \
    rm -rf /var/lib/apt/lists/*

WORKDIR /app
ENV PYTHONPATH=/app

COPY requirements.txt .
# upgrade pip & install all Python deps without cache
RUN pip install --upgrade pip setuptools wheel && \
    pip install --no-cache-dir -r requirements.txt

# bring in the wait-for-it script
COPY wait-for-it.sh .
RUN chmod +x wait-for-it.sh

EXPOSE 8020

# wait for Postgres, then launch Uvicorn
CMD ["./wait-for-it.sh", "db:5432", "--", "uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8020"]
